<% if (success && success.length) { %>
<div
  class="alert alert-success alert-dismissible fade show w-25 text-center fixed-top m-auto"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>

<% if (error && error.length) { %>
<div
  class="alert alert-warning alert-dismissible fade show w-25 text-center fixed-top m-auto"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
