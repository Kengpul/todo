<% layout('layouts/boilerplate') %>
<div class="container">
  <header class="text-center my-5">
    <h2>Monday</h2>
    <h3>February 2022</h3>
  </header>
  <div
    class="mb-3 d-flex flex-column justify-content-center align-items-center"
  >
    <div class="col-12">
      <form action="/todo" method="POST" class="validate" novalidate>
        <input
          class="form-control"
          type="text"
          name="todo"
          placeholder="Add task"
          required
          autofocus
        />
      </form>
      <ul class="list-group mt-3">
        <% for (let todo of todos){ %>
        <label class="form-label" for="<%= todo._id %>">
          <li
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="<%= todo._id %>"
            />
            <%= todo.todo %>
            <form action="/todo/<%= todo._id %>?_method=DELETE" method="POST">
              <button class="btn btn-danger">delete</button>
            </form>
          </li>
        </label>
        <% } %>
      </ul>
    </div>
  </div>
</div>
