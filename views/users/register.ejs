<% layout('layouts/boilerplate') %>

<div class="container">
  <div class="col-6 offset-3 mt-5">
    <h1>Register</h1>
    <form action="/register" method="POST" class="validate" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          class="form-control"
          id="username"
          required
        />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          class="form-control"
          id="email"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          id="password"
          required
        />
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>
